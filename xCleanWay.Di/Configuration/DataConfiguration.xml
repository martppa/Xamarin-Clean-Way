<?xml version="1.0" encoding="UTF-8"?>
<objects xmlns="http://www.springframework.net"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.springframework.net http://www.springframework.net/schema/objects/spring-objects-1.1.xsd">

    <object id="DataThread" type="xCleanWay.Data.Threading.DataThread, xCleanWay.Data" singleton="false"/>
    
    <object id="CountryDataSource" type="xCleanWay.Remote.DataSources.CountryNetworkDataSource, xCleanWay.Data">
        <constructor-arg ref="CountryNetworkProvider" index="0"/>
    </object>

    <object id="CountryDataSourceSupplier" type="xCleanWay.Data.Repositories.DataSources.Suppliers.CountryDataSourceSupplier, xCleanWay.Data">
        <constructor-arg ref="CountryDataSource" index="0"/>
    </object>
    
    <object id="CountryEntityMapper" type="xCleanWay.Data.Entities.Mappers.CountryEntityMapper, xCleanWay.Data"/>
    
    <object id="CountryRepository" type="xCleanWay.Data.Repositories.CountryRepository, xCleanWay.Data">
        <constructor-arg ref="CountryDataSourceSupplier" index="0"/>
        <constructor-arg ref="CountryEntityMapper" index="1"/>
    </object>

</objects>